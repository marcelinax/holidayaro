@model IEnumerable<Holidayaro.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5>Reservations</h5>


<div class="table-box d-flex flex-column">
    <div class="table-box-top d-flex justify-content-end align-items-center">
        <div class="table-box-top-options d-flex align-items-end">
            <div class="row mr-5 align-items-end">
                <label class="mb-0 mr-2">Show items</label>
                <select></select>
            </div>
            <div class="row align-items-end">
                <label class="mb-0">Showing 1-10 of 140</label>
                <div class="btns-box d-flex ml-3">
                    <button class="btn"><i class='bx bx-chevron-left'></i></button>
                    <button class="btn"><i class='bx bx-chevron-right'></i></button>
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReservationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserToken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HotelId)  
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hotel.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <div> @Html.DisplayFor(modelItem => item.ReservationId)</div>
                </td>
                <td>
                    <div> @Html.DisplayFor(modelItem => item.UserToken)</div>
                </td>
                <td>
                    <div>  @Html.DisplayFor(modelItem => item.HotelId)</div>
                </td>
                <td>
                    <div> @Html.DisplayFor(modelItem => item.Hotel.Name)</div>
                </td>
                <td>
                    <div> @Html.DisplayFor(modelItem => item.Date)</div>
                </td>
                <td>
                    <div>@Html.DisplayFor(modelItem => item.Name)</div>
                </td>
                <td>
                    <div>@Html.DisplayFor(modelItem => item.Surname)</div>
                </td>
                <td>
                    <div>@Html.DisplayFor(modelItem => item.Email)</div>
                </td>
                <td>
                    <div>@Html.DisplayFor(modelItem => item.Phone)</div>
                </td>
                <td>
                    <div>@Html.Raw(item.DateOfBirth.ToString().Split(' ')[0])</div>
                </td>



                <td>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.ReservationId">
                            <i class='bx bx-edit'></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ReservationId">
                            <i class='bx bx-trash-alt'></i>
                        </a>
                    </div>

                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

