@model Holidayaro.Models.Hotel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h5>Edit Hotel</h5>
    </div>

</div>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" id="edit-hotel-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HotelId" />
            <div class="form-group">

                <input asp-for="Name" class="form-control" placeholder="Name" />
                <i class='bx bx-buildings'></i>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Country" class="form-control" placeholder="Country" />
                <i class='bx bx-map'></i>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Price" class="form-control" placeholder="Price" min="0" />
                <i class='bx bx-dollar'></i>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="PhotoUrl" class="form-control" placeholder="PhotoUrl" />
                <i class='bx bx-image'></i>
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Rating" class="form-control" placeholder="Rating" />
                <i class='bx bx-star'></i>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Days" class="form-control" placeholder="Days" min="1" />
                <i class='bx bx-time'></i>
                <span asp-validation-for="Days" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Room" class="form-control" placeholder="Room" />
                <i class='bx bx-bed'></i>
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Board" class="form-control" placeholder="Board" />
                <i class='bx bx-dish'></i>
                <span asp-validation-for="Board" class="text-danger"></span>
            </div>
            <div id="hotel-descriptions" class="form-group align-items-center">
                <div class="form-control ps-0 d-flex flex-wrap">
                    <div class="items align-items-center d-flex w-100 flex-wrap"></div>
                    <input placeholder="Descriptions" class="m-0 p-0 border-0" />
                    <i class='bx bx-detail'></i>

                </div>
                <span asp-validation-for="HotelDescriptions" class="text-danger" id="descriptions-error"></span>
            </div>

            <div id="hotel-attractions" class="form-group align-items-center">
                <div class="form-control ps-0 d-flex flex-wrap">
                    <div class="items align-items-center d-flex w-100 flex-wrap"></div>
                    <input placeholder="Attractions" class="m-0 p-0 border-0" />
                    <i class='bx bx-spa'></i>

                </div>
                <span asp-validation-for="HotelAttractions" class="text-danger" id="attractions-error"></span>
            </div>



            <div class="form-group d-flex justify-content-center align-items-center">
                <a class="btn d-flex justify-content-center align-items-center mr-2" asp-action="Index">
                    Cancel
                </a>
                <input type="submit" value="Edit" class="btn d-flex justify-content-center align-items-center" />

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/editHotelForm.js" asp-append-version="true"></script>
}
