@model Holidayaro.Models.Hotel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";

}


<div class="row justify-content-center">
    <div class="col-md-4">     
    <h5>Create Hotel</h5>
    </div>
   
    </div>

    <div class="row justify-content-center">

        <div class="col-md-4">
            <form id="create-hotel-form" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <i class='bx bx-buildings'></i>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Country" class="form-control" placeholder="Country" />
                    <i class='bx bx-map'></i>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Price" class="form-control" placeholder="Price" min="0" />
                    <i class='bx bx-dollar'></i>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Rating" class="form-control" placeholder="Rating" />
                    <i class='bx bx-star'></i>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Days" class="form-control" placeholder="Days" min="1" />
                    <i class='bx bx-time'></i>
                    <span asp-validation-for="Days" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Room" class="form-control" placeholder="Room" />
                    <i class='bx bx-bed'></i>
                    <span asp-validation-for="Room" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Board" class="form-control" placeholder="Board" />
                    <i class='bx bx-dish'></i>
                    <span asp-validation-for="Board" class="text-danger"></span>
                </div>

                

                <div class="form-group d-flex justify-content-center align-items-center">
                    <a class="btn d-flex justify-content-center align-items-center mr-2" asp-action="Index">
                        Cancel
                    </a>
                    <input type="submit" value="Create" class="btn d-flex justify-content-center align-items-center" />

                </div>
</form>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
