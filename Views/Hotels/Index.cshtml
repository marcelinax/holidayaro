@model IEnumerable<Holidayaro.Models.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Board)
            </th>  
            <th>
                @Html.DisplayNameFor(model => model.HotelDescriptions)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.HotelAttractions)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.PhotosUrls)
            </th> 
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Board)
            </td>
            <td>
                @foreach (var element in item.HotelDescriptions)
                {
                <p>@Html.DisplayFor(m => element.Name)</p>
                }

            </td>
            <td>
                @foreach (var element in item.HotelAttractions)
                {
                    <p>@Html.DisplayFor(m => element.Name)</p>
                }
            </td>
            <td>
                @foreach (var element in item.PhotosUrls)
                {
                    <p>@Html.DisplayFor(m => element.PhotoUrl)</p>
                }
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.HotelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HotelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HotelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
